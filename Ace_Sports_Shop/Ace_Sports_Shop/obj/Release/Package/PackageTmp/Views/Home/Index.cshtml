<!-- JTV Home Slider -->
<div class="jtv-slideshow">
    <div class="container">
        <div class="row">
            <div class="col-md-9 col-md-push-3 col-sm-12">
                <div id='jtv-rev_slider_wrapper' class='rev_slider_wrapper fullwidthbanner-container'>
                    <div id='jtv-rev_slider' class='rev_slider fullwidthabanner'>
                        <ul>
                            <li data-transition='fade' data-slotamount='7' data-masterspeed='1000' data-thumb='~/Content/HomeShop/images/slider/slide-img1.jpg'>
                                <img src="~/Content/HomeShop/images/slider/test.jpg" alt="slide-img" data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' />
                                <div class="info">
                                    <div class='tp-caption sfb  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1500' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:4;max-width:auto;max-height:auto;white-space:nowrap;'><a href='#' class="jtv-shop-now-btn">Mua Ngay</a> </div>
                                </div>
                            </li>
                            <li data-transition='fade' data-slotamount='7' data-masterspeed='1000' data-thumb='~/Content/HomeShop/images/slider/slide-img2.jpg'>
                                <img src="~/Content/HomeShop/images/slider/test2.jpg" alt="slide-img" data-bgposition='left top' data-bgfit='cover' data-bgrepeat='no-repeat' />
                                <div class="info">
                                    <div class='tp-caption sfb  tp-resizeme ' data-endspeed='500' data-speed='500' data-start='1500' data-easing='Linear.easeNone' data-splitin='none' data-splitout='none' data-elementdelay='0.1' data-endelementdelay='0.1' style='z-index:4;max-width:auto;max-height:auto;white-space:nowrap;'><a href='#' class="jtv-shop-now-btn">Mua Ngay</a> </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- end JTV Home Slider -->
            <!-- hot deal products -->
            <div class="col-md-3 hot-deal col-md-pull-9 col-sm-5">
                <div class="slider-items-products">
                    <div id="hot-deal-slider" class="product-flexslider hidden-buttons">
                        <div class="slider-items slider-width-col4">

                            @foreach (var item in Model)
                            {
                                var urll = "san-pham/" + item.MetaTitle + "-" + item.ID;
                                <div class="item">
                                    <div class="item-inner">
                                        <div class="item-img">
                                            <div class="item-img-info">

                                                <a href="@urll" title="" class="product-image"> <img src="@item.Image" ></a>
                                                <div class="hot-label hot-top-left">-@dao.sale(item.Price, item.PromotionPrice)%</div>
                                                <div style="margin-left:-45px" class="jtv-box-hover">
                                                    <ul class="add-to-links">
                                                        <li><a class="link-quickview" href="" onclick="quick(@item.ID)"><i class="icon-magnifier-add icons"></i><span class="hidden">Quick View</span></a></li>
                                                        <li><a class="link-wishlist" href="wishlist.html"><i class="icon-heart icons"></i><span class="hidden">Wishlist</span></a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="item-info">
                                            <div class="info-inner">
                                                <div class="item-title"> <a href="single_product.html" title="Product Title Here"> @item.Name</a></div>
                                                <div class="item-content">
                                                    <div class="rating"> <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> </div>
                                                    <div class="item-price">
                                                        <div class="price-box">
                                                            <span class="regular-price">
                                                                <span class="price" style="text-decoration:line-through;opacity:0.5;font-size: 13px;font-weight:500;color:black;">@dao.formatNumber(item.Price) </span>
                                                                <span class="price">@dao.formatNumber(item.PromotionPrice) </span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="action">
                                                        <a href="@urll"><button data-original-title="Add to Cart" title="" type="button" class="button btn-cart"><span>xem chi tiết</span> </button></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="jtv-box-timer">
                                                <div class="countbox_1 timer-grid"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
