@model List<Model.Entity.Tbl_Product>
@using Model.DAO
@{
    ProductDAO dao = new ProductDAO();

}
@foreach (var item in Model)
{
    <ul class="products-grid">
        <li class="item col-lg-3 col-md-3 col-sm-4 col-xs-6">
            <div class="item-inner">
                <div class="item-img">
                    <div class="item-img-info">
                        @{ var url = "san-pham/" + item.MetaTitle + "-" + item.ID;}
                        <a class="product-image" title="" href="@url"> <img alt="Product Title Here" src="@item.Image"> </a>
                        <div class="new-label new-top-left">- @dao.sale(item.Price, item.PromotionPrice) %</div>
                        <div style="margin-left:-45px" class="jtv-box-hover">
                            <ul class="add-to-links">
                                <li><a class="link-quickview" onclick="quick(@item.ID)" href=""><i class="icon-magnifier-add icons"></i><span class="hidden">Quick View</span></a></li>
                                <li><a class="link-wishlist" href="#"><i class="icon-heart icons"></i><span class="hidden">Wishlist</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="item-info">
                    <div class="info-inner">
                        <div class="item-title"> <a title="" href="@url"> @item.Name </a> </div>
                        <div class="item-content">
                            <div class="rating"> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> <i class="fa fa-star-o"></i> </div>
                            <div class="item-price">
                                <div class="price-box">
                                    <p class="old-price"> <span class="price-label"></span> <span class="price"> @dao.formatNumber(item.Price) </span> </p>
                                    <p class="special-price"> <span class="price-label"></span> <span class="price"> @dao.formatNumber(item.PromotionPrice) </span> </p>

                                </div>
                            </div>
                            <div class="action">
                                <a href="@url="><button data-original-title="Add to Cart" title="" type="button" class="button btn-cart"><span>xem chi tiết</span> </button></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
    </ul>
}
